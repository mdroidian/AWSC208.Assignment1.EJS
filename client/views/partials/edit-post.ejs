<%= post._id %>
<form action="/submit/update/<%= post._id %>" method="post">
    <div class="form-group">
        <label for="title" class="form-text text-white">Product Title</label>
        <input type="text" name="title" id="title" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="snippet" class="form-text text-white">Product Price</label>
        <input type="text" name="snippet" id="snippet" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="body" class="form-text text-white">Product Description</label>
        <textarea name="body" id="body" class="form-control"></textarea>
    </div>
    <div class="d-grid mt-2">
        <button class="btn btn-primary">Submit</button>
    </div>
</form>