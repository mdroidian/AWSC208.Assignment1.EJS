<form action="/submit" method="post" style="display: inline-grid;">
    <div class="form-group">
        <label for="title">Product Title:</label>
        <input type="text" name="title" id="title" required>
    </div>
    <div class="form-group">
        <label for="snippet">Product Price</label>
        <input type="text" name="snippet" id="snippet" required>
    </div>
    <div class="form-group">
        <label for="body">Product Description</label>
        <textarea name="body" id="body" ></textarea>
    </div>
    <button class="bton bton-primary">Submit</button>
</form>